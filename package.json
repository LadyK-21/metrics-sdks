{
  "name": "metrics-sdks-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "lint": "eslint .",
    "postinstall": "lerna bootstrap --hoist",
    "prettier": "prettier --list-different --write \"./**/**.js\"",
    "publish": "lerna publish",
    "start": "nodemon testServer.js",
    "test": "lerna run test --stream",
    "version": "conventional-changelog --pkg lerna.json -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/metrics-sdks.git"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@openapi-contrib/openapi-schema-to-json-schema": "^3.0.4",
    "@readme/eslint-config": "^3.4.2",
    "ajv": "^6.12.4",
    "body-parser": "^1.19.0",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "^7.8.1",
    "expect": "^26.4.2",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "is-valid-uuid-v4": "^1.2.1",
    "lerna": "^3.22.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "socket.io": "^2.3.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "packages/"
    ],
    "ext": "js json"
  }
}
