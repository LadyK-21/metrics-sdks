{
  "extends": "@readme/eslint-config/testing",
  "rules": {
    "jest/expect-expect": [
      "error",
      {
        "assertFunctionNames": [
          "expect",
          "request.**.expect"
        ]
      }
    ],

    // Because our tests utilize responses from a socket server to determine their success/failures, we can't run our
    // awaits as returns in the test because they'll finish before the actual test backend has.
    "jest/no-test-callback": "off",

    // Bump up maxArgs for `expect()` assertions to 2 so we can use `jest-expect-message`.
    "jest/valid-expect": ["error", {"maxArgs": 2}]
  }
}
