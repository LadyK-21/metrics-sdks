{
  "extends": "@readme/eslint-config/testing",
  "rules": {
    "jest/expect-expect": [
      "error",
      {
        "assertFunctionNames": [
          "expect",
          "request.**.expect"
        ]
      }
    ],

    // Bump up maxArgs to 2 so we can use jest-expect-message without errors.
    "jest/valid-expect": ["error", {"maxArgs": 2}]
  }
}
